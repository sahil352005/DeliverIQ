{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*", "ormconfig.ts"],
  "exclude": ["node_modules", "dist", "test"]
}


